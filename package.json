{
  "private": true,
  "name": "antora-build",
  "version": "3.2.0-alpha.6",
  "description": "The development build for the Antora monorepo.",
  "license": "MPL-2.0",
  "author": "OpenDevise Inc. (https://opendevise.com)",
  "homepage": "https://antora.org",
  "repository": "gitlab:antora/antora",
  "bugs": {
    "url": "https://gitlab.com/antora/antora/issues"
  },
  "scripts": {
    "build": "npm test",
    "postbuild": "npm run lint",
    "coverage": "npx -y nyc@~17.1 _mocha",
    "deps": "node npm/validate-deps.js",
    "format": "npx -y @biomejs/biome format --write",
    "postformat": "node --disable-warning ExperimentalWarning npm/postformat.js",
    "lint": "npx -y @biomejs/biome lint",
    "prepareForDev": "node npm/prepare-for-dev.js",
    "test": "_mocha",
    "pretidy": "npm run lint",
    "tidy": "npm run format",
    "posttidy": "npm run deps",
    "version": "node npm/version.js"
  },
  "devDependencies": {
    "mocha": "~10.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "nyc": {
    "cache": true,
    "cacheDir": "node_modules/.cache/nyc",
    "include": [
      "packages/*/{bin,lib}/**/*.js"
    ],
    "exclude": [
      "packages/test-harness/lib/**/*.js"
    ],
    "reporter": [
      "cobertura",
      "lcov",
      "text"
    ],
    "reportDir": "reports"
  },
  "workspaces": [
    "packages/*"
  ]
}
